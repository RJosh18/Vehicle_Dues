                android:layout_columnWeight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#98ddca"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

